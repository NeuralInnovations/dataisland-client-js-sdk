{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2015",
    "module": "amd",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "outFile": "dist/dataisland-sdk.js",
    "rootDir": "src",
    "allowJs": true,
    "checkJs": true,
    "downlevelIteration": true
  },
  "exclude": [
    "dist/**/*"
  ],
  "include": [
    "src/**/*",
    ".eslintrc.js"
  ]
}
