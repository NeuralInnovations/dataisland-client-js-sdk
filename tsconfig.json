{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "alwaysStrict": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "downlevelIteration": true,
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "exclude": [
    "dist/**/*"
  ],
  "include": [
    "src/**/*",
    "index.js",
    "index.ts"
  ]
}
